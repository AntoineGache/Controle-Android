<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bleuClair"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="247dp"
        android:layout_height="72dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/logo_accueil" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="186dp"
        android:layout_height="147dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fleche"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <EditText
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="" />

        <EditText
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="" />

        <EditText
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="371dp"
        android:layout_height="85dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="19dp"
        android:background="@color/vert"
        android:text="RÃ©sultat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/calcul"
        android:layout_width="397dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="269dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="19dp"
        android:background="@color/bleu"
        android:text="Calculer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="142dp"
        android:layout_height="152dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="7dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@+id/fleche"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">

        <Button
            android:id="@+id/d2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bleu"
            android:text="DEG2" />

        <Button
            android:id="@+id/d1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bleu"
            android:text="DEG1" />

        <Button
            android:id="@+id/d0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bleu"
            android:text="DTE" />
    </LinearLayout>

    <ImageView
        android:id="@+id/fleche"
        android:layout_width="54dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="43dp"
        app:layout_constraintBottom_toTopOf="@+id/result"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout2"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:srcCompat="@drawable/fleche" />

</androidx.constraintlayout.widget.ConstraintLayout>